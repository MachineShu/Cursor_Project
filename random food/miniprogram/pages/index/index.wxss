/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* 头部区域 */
.header {
  background: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.userinfo {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.filter-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.filter-item text {
  font-size: 24rpx;
  color: #666;
}

.filter-item .selected-value {
  margin-top: 10rpx;
  color: #333;
}

/* 主体内容区 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
}

.result-area {
  width: 100%;
  padding: 20rpx;
}

.food-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.food-image {
  width: 100%;
  height: 400rpx;
}

.food-info {
  padding: 20rpx;
}

.food-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.food-price, .food-distance {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.empty-state {
  color: #999;
  font-size: 28rpx;
  margin: 40rpx 0;
}

.action-bar {
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.action-btn {
  background: #07c160;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
}

/* 快捷操作区 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666;
}
